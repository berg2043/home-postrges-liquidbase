<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

  <changeSet id="1" author="Phil">
    <sql dbms="postgresql" endDelimiter=";"> CREATE ROLE server_dml WITH LOGIN PASSWORD 'testing' </sql>
    <sql dbms="postgresql" endDelimiter=";"> ALTER DEFAULT PRIVILEGES GRANT SELECT, INSERT, UPDATE,
      DELETE ON TABLES TO server_dml; </sql>
    <rollback>
      <sql
        dbms="postgresql" endDelimiter=";"> ALTER DEFAULT PRIVILEGES REVOKE ALL ON TABLES FROM
      server_dml </sql>
      <sql dbms="postgresql" endDelimiter=";"> DROP ROLE server_dml</sql>
    </rollback>
  </changeSet>

</databaseChangeLog>